<form id="autologout_plugin_settings" class="form-horizontal">

    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: pluginSettings.isEnabledByInactivity" > Autologout by inactivity
            </label>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label>Timeout:
                <div class="input-append">
                    <input type="number" step="any" min="1" class="input-mini text-right"  data-bind="value: pluginSettings.countdownTimeInMinutes" >
                    <span class="add-on">minutes</span>
                </div>
            </label>
        </div>
    </div>
    <hr/>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: pluginSettings.isEnabledByAfterPrint" > Autologout after print
            </label>
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <label>
                <select data-bind="value: pluginSettings.afterPrintStatus"  class="input-medium">
                    <option value="onlySuccess">only succesful</option>
                    <option value="anyStatus">any status</option>
                </select>
            </label>
        </div>
    </div>





</form>
